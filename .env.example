# =============================================================================
# E-commerce Environment Variables Template
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=ecommerce
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=change_this_secure_password_123

# PostgreSQL connection URL (used by backend)
DATABASE_URL=postgresql://ecommerce_user:change_this_secure_password_123@postgres:5432/ecommerce

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=change_this_redis_password_456
REDIS_URL=redis://:change_this_redis_password_456@redis:6379/0

# =============================================================================
# Backend Configuration
# =============================================================================
# Secret keys (generate with: openssl rand -hex 32)
SECRET_KEY=change_this_secret_key_789
JWT_SECRET_KEY=change_this_jwt_secret_key_012
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# Frontend Configuration
# =============================================================================
NODE_ENV=development
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_this_grafana_password_345

# Prometheus
PROMETHEUS_RETENTION_TIME=15d

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIRECTORY=uploads/

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@ecommerce.com

# =============================================================================
# Production Only Settings
# =============================================================================
# SSL/TLS
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Sentry (Error Tracking)
# SENTRY_DSN=your-sentry-dsn-here

# AWS S3 (File Storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1
